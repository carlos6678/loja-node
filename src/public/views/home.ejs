<%- include('header') %>
<div class="row mt-3 ml-1 mr-1">
    <div class="col-sm-2 menu-lateral">
        <ul class="list-group">
            <li class="list-group-item bg-dark"><strong>Categorias</strong></li>
            <% Categories.forEach(category=>{ %>
                <a style="text-decoration: none;" href="<%= category.id %>" class="list-group-item list-group-item-light"><%=category.name%></a>
            <%})%>
        </ul>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light menu-categories" style="background-color: #E9EcEf;">
        <div class="dropdown">
            <button type="button" class="btn-dark dropdown-toggle" id="dropCategories" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
                <strong>Categorias</strong>
              </button>
            <div class="dropdown-menu bg-dark" aria-labelledby="dropCategories">
                <% Categories.forEach(category=>{ %>
                    <a style="text-decoration: none;color: white;font-weight: bold;" href="<%= category.id %>" class="dropdown-item bg-dark mb-1 border-bottom"><%=category.name%></a>
                <%})%>
            </div>
        </div>
    </nav>

    <nav class="navbar navbar-expand-lg navbar-light menu-lateral-show" style="background-color: #E9EcEf;">
        <button type="button" class="btn-dark" id="show-menu-lateral">
          <span class="navbar-toggler-icon"></span>
          <strong>Info</strong>
        </button>
    </nav>

    <div class="menu-lateral-show-body">

        <nav class="navbar navbar-expand-lg navbar-light menu-lateral-show action-menu">
            <button type="button" class="btn-dark" id="hide-menu-lateral">
            <span class="navbar-toggler-icon"></span>
            <strong>Fechar</strong>
            </button>
        </nav>

        <ul class="list-group">
            <li class="list-group-item bg-dark"><strong>Promoções</strong></li>
            <%if(ProductsPromotion){%>
                <% ProductsPromotion.forEach(product=>{ %>
                    <li class="list-group-item list-group-item-light">
                        <a href="/products/product/<%= product.id %>">
                            <div class="media">
                                <img style="height:100px;width: 100px;" class="mr-3" src="<%=process.env.PATH_IMAGE+product.image_url[0].url%>" alt="testando">
                                <div class="media-body">
                                    <p><%=product.name%></p>
                                    <p><%=product.descricao%></p>
                                    <p>R$ <%=product.price%></p>
                                </div>
                            </div>
                        </a>
                    </li>
                <%})%>
            <%}%>
        </ul>
        <ul class="list-group">
            <li class="list-group-item bg-dark"><strong>Novos</strong></li>
            <%if(ProductsNew){%>
                <% ProductsNew.forEach(product=>{ %>
                    <li class="list-group-item list-group-item-light">
                        <a href="/products/product/<%= product.id %>">
                            <div class="media">
                                <img style="height:100px;width: 100px;" class="mr-3" src="<%=process.env.PATH_IMAGE+product.image_url[0].url%>" alt="testando">
                                <div class="media-body">
                                    <p><%=product.name%></p>
                                    <p><%=product.descricao%></p>
                                    <p>R$ <%=product.price%></p>
                                </div>
                            </div>
                        </a>
                    </li>
                <%})%>
            <%}%>
        </ul>
    </div>
    <div class="col-sm-7" id="centro">
        <ul class="nav nav-pills nav-fill fundo-bar">
            <li class="nav-item bg-success">
                <a class="nav-link" href="#">Promoções</a>
            </li>
            <li class="nav-item bg-success">
                <a class="nav-link" href="#">Mais Vendidos</a>
            </li>
            <li class="nav-item bg-success">
                <a class="nav-link" href="#">Novos</a>
            </li>
        </ul>
        <div class="w-100 d-flex justify-content-center mt-3">
            <ul class="pagination">
                <% for(let i=1;i<=TotalPages;i++){%>
                    <li class="page-item"><a href="/<%=i%>" class="page-link"><%=i%></a></li>
                <%}%>
            </ul>
        </div>

        <% Products.forEach((product)=>{%>
            <a href="/products/product/<%= product.id %>" class="card ml-1 mb-2 float-left bg-dark" style="width: 200px;height: 430px;text-decoration: none;">
                <img style="height: 200px;" src="<%= process.env.PATH_IMAGE+product.image_url[0].url%>" class="card-img-top">
                <div class="card-body bg-dark">
                    <h5 class="card-title"><%= product.name %></h5>
                    <p class="card-text"><%= product.descricao %></p>
                    <strong>R$ <%= product.price%></strong>
                </div>
            </a>
        <%})%>
    </div>

    <div class="col-sm-3 menu-lateral">

        <ul class="list-group" >
            <li class="list-group-item bg-dark"><strong>Promoções</strong></li>
            <%if(ProductsPromotion){%>
                <% ProductsPromotion.forEach(product=>{ %>
                    <a href="/products/product/<%= product.id %>" class="list-group-item list-group-item-light" style="text-decoration: none;">
                        <div class="media">
                            <img style="height:100px;width: 100px;" class="mr-3" src="<%=process.env.PATH_IMAGE+product.image_url[0].url%>" alt="testando">
                            <div class="media-body">
                                <p><%=product.name%></p>
                                <p><%=product.descricao%></p>
                                <p>R$ <%=product.price%></p>
                            </div>
                        </div>
                    </a>
                <%})%>
            <%}%>
        </ul>
        <ul class="list-group mt-3">
            <li class="list-group-item bg-dark"><strong>Novos</strong></li>
            <%if(ProductsNew){%>
                <% ProductsNew.forEach(product=>{ %>
                    <a href="/products/product/<%= product.id %>" class="list-group-item list-group-item-light" style="text-decoration: none;">
                        <div class="media">
                            <img style="height:100px;width: 100px;" class="mr-3" src="<%=process.env.PATH_IMAGE+product.image_url[0].url%>" alt="testando">
                            <div class="media-body">
                                <p><%=product.name%></p>
                                <p><%=product.descricao%></p>
                                <p>R$ <%=product.price%></p>
                            </div>
                        </div>
                    </a>
                <%})%>
            <%}%>
        </ul>
    </div>
</div>

<%- include('footer') %>