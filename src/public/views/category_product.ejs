<%- include('header') %>
<div class="container-fluid">
    <!-- <h1 class="text-secondary mt-1">Pesquisou Por <strong><%=Category[0].name%></strong></h1> -->
    <div class="row justify-content-center">
        <div class="carousel slide mt-3" data-ride="carousel" id="carousel_promotions">
            <div class="carousel-inner">
                <% Products.forEach((product,index)=>{ %>
                    <%if(index===0){%>
                        <div class="carousel-item active">
                            <img src="<%=process.env.PATH_IMAGE+product.image_url[0].url%>" class="d-block w-100">
                        </div>
                    <%}else{%>
                        <div class="carousel-item">
                            <img src="<%=process.env.PATH_IMAGE+product.image_url[0].url%>" class="d-block w-100">
                        </div>
                    <%}%>
                <%})%>
            </div>
            <a class="carousel-control-prev" href="#carousel_promotions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true" style="background-color: black;"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel_promotions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true" style="background-color: black;"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <% Products.forEach((product)=>{%>
            <a href="/products/product/<%= product.id %>" class="card ml-2 mb-2 mt-3 float-left bg-dark" id="product_category">
                <img src="<%= process.env.PATH_IMAGE+product.image_url[0].url%>" class="card-img-top">
                <div class="card-body bg-dark">
                    <% if(product.is_new===1){ %>
                        <div class="is_new">Novo</div>
                    <%}%>
                    <% if(product.promotion===1){ %>
                        <div class="promotion"><%=
                            100-((product.price*100)/product.old_price)
                        %>%</div>
                    <%}%>
                    <% if(product.bestseller===1){ %>
                        <div class="bestseller">Bestseller</div>
                    <%}%>
                    <h5 class="card-title"><%= product.name %></h5>
                    <p class="card-text mb-5 text-limit"><%= product.descricao %></p>
                    <div class="d-flex justify-content-between">
                        <% if(product.old_price != null){ %>
                            <strong class="text-secondary" style="text-decoration: line-through;font-size: 25px;">$R$ <%= product.old_price%></strong>
                        <%}%>
                        <strong style="font-size: 25px;">R$ <%= product.price%></strong>
                    </div>
                </div>
            </a>
        <%})%>
    </div>
</div>