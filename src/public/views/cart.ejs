<%-include('header')%>
<div class="container-fluid">
    <div class="subtotal ml-5 mb-5">
        <p>Subtotal: R$<%=subtotal%></p>
    </div>
    <%Products.forEach(product=>{%>
        <div class="jumbotron w-100">
            <ul class="list-group">
                <div class="name-product-cart">
                    <h5><%=product.name%></h5>
                </div>
                <li class="list-group-item d-flex justify-content-around info-reponsive-cart">
                    <img src="<%= process.env.PATH_IMAGE+product.photo %>" id="info-reponsive-cart-img">
                    <div class="d-flex flex-column justify-content-around">
                        <h1>Quant:<%=product.quantity%></h1>
                        <a href="/products/product/<%=product.id%>" class="btn btn-lg btn-outline-dark w-100">Ver Produto</a>
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-around info-reponsive-cart-2">
                    <div class="w-100">
                        <h3 class="price-cart mt-1">Valor: R$<%=product.price%></h3>
                    </div>
                    <div class="actions-cart">
                        <a href="/cart/delete/<%=product.id%>">
                            <button class="btn btn-outline-danger" style="font-weight: bold;">Excluir</button>
                            <img style="width: 50px;" src="/assets/cards/delete.png">
                        </a>
                        <a href="/cart/subtraction/<%=product.id%>">
                            <button class="btn btn-outline-success" style="font-weight: bold;">Subtrair</button>
                            <img style="width: 50px;" src="/assets/cards/sub.png">
                        </a>
                        <a href="/cart/addUnidade/<%=product.id%>">
                            <button class="btn btn-outline-primary" style="font-weight: bold;">Adicionar</button>
                            <img style="width: 50px;" src="/assets/cards/add.png">
                        </a>
                    </div>
                </li>
            </ul>
        </div>
    <%})%>
</div>
